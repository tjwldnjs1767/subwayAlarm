<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="알람 설정">

        <ListPreference
            android:defaultValue="1"
            android:entries="@array/alarmMethod"
            android:entryValues="@array/alarmMethodValues"
            android:key="@string/alarm_method_key"
            android:negativeButtonText="@null"
            android:positiveButtonText="@null"
            android:title="알람 방식" />

        <ListPreference
            android:defaultValue="1"
            android:entries="@array/alarmCondition"
            android:entryValues="@array/alarmConditionValues"
            android:key="@string/alarm_condition_key"
            android:negativeButtonText="@null"
            android:positiveButtonText="@null"
            android:title="기본 하차 알람 조건" />

    </PreferenceCategory>

</PreferenceScreen>